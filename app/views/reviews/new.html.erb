<% content_for :meta_title, "Enabl | Write a review for #{@venue.name}!" %>
<div class="container py-5 px-4">
  <div class="d-flex justify-content-between text-center align-items-center">
      <%= link_to :back do %>
        <i class="fa-solid fa-fw fa-arrow-left"></i>
      <% end %>
    <h3><%= @venue.name %></h3>
    <span style="visibility: hidden;"><i class="fa-solid fa-fw fa-arrow-left"></i></span>
  </div>
  <div>
    <%= simple_form_for [@venue, @review], html: { class: "mapabl-form" } do |f| %>
      <div class="d-flex justify-content-center py-2">
        <%= f.label :photos, label: "<i class='fa-solid fa-camera'></i>".html_safe, class: 'upload-avatar' %>
         <%= f.input :photos, as: :file, input_html: { hidden: true, data: { action: 'change->venue#upload' } }, label: false %>
      </div>
      <div class="mapabl-input-group mapabl-rating">
      General Rating:
        <%= f.input :general_rating, collection: 1..5, selected: 5, input_html: {data: {controller: "star-rating"}}, label: false %>
      </div>
      <div class="mapabl-input-group mapabl-rating">
      Accessibility Rating:
        <%= f.input :access_rating, collection: 1..5, selected: 5, input_html: {data: {controller: "star-rating"}}, label: false %>
      </div>
      <div class="mapabl-input-group">
        <%= f.input :content, as: :text, placeholder: 'Share what you think about this place!', label: false %>
      </div>
      <div class="mapabl-submit">
        <%= f.submit "Publish", class: "mapabl-btn-purple large" %>
      </div>
    <% end %>
  </div>
</div>
