<div class="info-container d-flex justify-content-start align-items-stretch">
  <div class="info-container-left">
    <% if venue.photos.first == nil %>
      <%= image_tag('venue_placeholder_img.jpg', alt: "An image of a building outline", class: "venue-image") %>
    <% else %>
      <%= cl_image_tag venue.photos.first.key, alt: "An image of #{venue.name}", class: "venue-image" %>
    <% end %>
  </div>
  <div class="info-container-right">
    <div class="info-container-address">
        <h5><%= venue.name %></h5>
        <div class="venue_type"><%= venue.venue_category.venue_type %></div>
        <p><i class="fa-sharp fa-solid fa-location-dot" style="color: #000000;"></i> <%= venue.address.truncate(30) %></p>
    </div>
    <div class="info-container-details d-flex justify-content-between align-items-center">
      <p><i class="fa-solid fa-star fa-fw" style="color: #560085;"></i> <%= pluralize(venue.reviews.count, 'review') %></p>
      <%= link_to "Details", venue_path(venue), class:"mapabl-btn-purple medium" %>
    </div>
  </div>
</div>
